<% provide(:title, 'Home') %>
<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="post_form">
          <%= render 'shared/post_form' %>
        </section>
      </aside>
    </div>
<% else %>
<div class="center jumbotron">
    <h1>Welcome, anonymous guy!</h1>
    <div class="welcome">
      <h2>This is the landing page of this app.</h2>
      <p>You might want to <%= link_to 'Register', new_user_path, class: "btn btn-lg btn-primary" %> if you haven't your account yet or
        <%= link_to 'Log In', login_url, class: "btn btn-lg btn-primary" %> with your existing account.</p>
    </div>
</div>
<% end %>
