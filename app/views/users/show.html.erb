<% provide(:title, @user.name.capitalize) %>
<p id="notice"><%= notice %></p>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <span class="avatar"><%= image_tag @user.image.url(:standard), :width => 100, :height => 100 %></span>
        <%= @user.name.capitalize %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ul class="posts">
          <%= render @posts %>
        </ul>
        <%= will_paginate @posts %>
    <% end %>
  </div>
</div>
<p>
  <strong>Name:</strong>
  <%= @user.name.capitalize %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
