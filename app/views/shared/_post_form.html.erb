<%= form_for(@post) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_field :title, placeholder: ' Post title' %>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder: 'Compose new post...' %>
    </div>
    <div class="field">
      <%= f.text_field :tags, placeholder: ' Post tags' %>
    </div>
    <%= f.submit 'Post', class: "btn btn-primary" %>
<% end %>
